{
  "name": "YouTube Extension for Decluttering",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Browser extension that removes clutter from Youtube page",
  "content_scripts": [
    {
      "matches": ["https://youtube.com/*", "https://*.youtube.com/*"],
      "css": ["css/styles.css"],
      "js": ["js/home.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["tabs", "activeTab", "https://*/*"]
}
